<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product ingress and chat</title>
    <%- include("../partials/head.ejs"); %>
</head>
<body>

        <div class="Subcontainer">
            <h2 class="productTitle">Ingress a product</h2>
            <form action="/productos" method="post" class="myForm" enctype="application/json">
                <div class="form-group">
                    <label for="title">Name</label>
                    <input type="text" name="title" id="title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="price" id="price" class="form-control">
                </div>
                <div class="form-group">
                    <label for="thumbnail">Product's image</label>
                    <input type="text" name="thumbnail" id="thumbnail" class="form-control" min="0" max="120"/>
                </div>
                <button type="submit" id="sumbitButton" class="btn btn-primary">Send</button>
            </form>
        </div>

        <div class="Subcontainer">
            <% if (products.length) { %>
                <h2 class="title">Products in</h2>
                <table class="table table-dark">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">ID</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% products.forEach(elem => {  %>
                      <tr>
                        <th scope="row"><%-elem.title%></th>
                        <th scope="row"><%-elem.price%></th>
                        <th scope="row"><img src="<%-elem.thumbnail%>" width="50px" height="50px"/></th>
                        <th scope="row"><%-elem.id%></th>
                      </tr>
                      <% } ) %>
                    </tbody>
                  </table>
            <% } else { %>
                    <h2>Product not found</h2>
                    <% } %>
        </div>

        <div class="Chat" >
            <h2 class="productTitle">Chat</h2>
            <form onsubmit="return addMessage(this)" class="chatForm">
                <div class="form-group">
                    <input type="email" id="email" placeholder="NickName" required>
                </div>
                <div class="mensajes"></div>
                <div class="form-group">
                    <input type="text" id="texto" placeholder="Send a message">
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>   
        </div> 
 
    <script src="./main.js"></script>
    <script src="./ejs.js"></script>
</body>
</html>